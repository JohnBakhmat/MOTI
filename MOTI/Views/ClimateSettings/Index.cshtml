@model IEnumerable<MOTI.Models.ClimateSetting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a
        class = "btn btn-success"
        asp-action = "Create">
        Create New
    </a>
</p>
<table
    class = "table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClimateSettingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClimateType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Units)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Request)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClimateSettingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClimateType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Units)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request.RequestId)
            </td>
            <td
                style = "display: flex; align-items: center; justify-content: flex-end;gap: 5px">
                <a
                    class = "btn btn-primary"
                    asp-action = "Edit"
                    asp-route-id = "@item.ClimateSettingId">
                    Edit
                </a> |
                <a
                    class = "btn btn-info"
                    asp-action = "Details"
                    asp-route-id = "@item.ClimateSettingId">
                    Details
                </a> |
                <a
                    class = "btn btn-danger"
                    asp-action = "Delete"
                    asp-route-id = "@item.ClimateSettingId">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>