@model IEnumerable<MOTI.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rooms Controller.</h1>
<h3>You can configure rooms here.</h3>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="display: flex; align-items: center; justify-content: flex-end;gap: 5px">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.RoomId">Edit</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.RoomId">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.RoomId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
