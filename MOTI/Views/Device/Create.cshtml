@using MOTI.Models.Enums
@model MOTI.Models.Device

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class ="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label">Capacity (Power/Minute)</label>
                <input type="number" step="0.01" value="0" asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                            <label asp-for="Consumption" class="control-label">Consumption (Power/Minute)</label>
                            <input type="number" step="0.01" value="0" asp-for="Consumption" class="form-control" />
                            <span asp-validation-for="Consumption" class="text-danger"></span>
                        </div>
            <div class="form-group">
                <label asp-for="ClimateType" class="control-label"></label>
                <select
                    asp-for = "ClimateType"
                    class = "form-control" asp-items="Html.GetEnumSelectList<ClimateType>()">
                    <option selected="selected" value="-1">Please select</option>
                </select>
                <span asp-validation-for="ClimateType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
