@model IEnumerable<MOTI.Models.Device>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Devices</h1>
<h3>You can create/edit/delete device information</h3>
<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClimateType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClimateType)
            </td>
            <td style="display: flex; align-items: center; justify-content: flex-end;gap: 5px">
                <a asp-action="Edit" class="btn-primary btn" asp-route-id="@item.DeviceId">Edit</a> |
                <a asp-action="Details"  class="btn btn-info" asp-route-id="@item.DeviceId">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DeviceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
